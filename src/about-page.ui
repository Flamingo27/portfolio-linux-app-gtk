<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="AboutPage" parent="AdwBin">
    <property name="child">
      <object class="AdwClamp">
        <property name="maximum-size">900</property>
        <property name="margin-top">32</property>
        <property name="margin-bottom">32</property>
        <property name="margin-start">16</property>
        <property name="margin-end">16</property>

        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>
            <property name="halign">center</property>

            <!-- Avatar / hero image -->
            <child>
              <object class="GtkPicture">
                <property name="content-fit">cover</property>
                <property name="width-request">192</property>
                <property name="height-request">192</property>
                <style>
                  <class name="circular-picture"/>
                </style>
              </object>
            </child>

            <!-- Name and title -->
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <property name="halign">center</property>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Alokparna Mitra</property>
                    <property name="halign">center</property>
                    <property name="justify">center</property>
                    <style><class name="title-2"/></style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Full-Stack Developer</property>
                    <property name="halign">center</property>
                    <property name="justify">center</property>
                    <style><class name="title-4"/></style>
                  </object>
                </child>
              </object>
            </child>

            <!-- About text (static mirror of Android copy) -->
            <child>
              <object class="GtkLabel">
                <property name="wrap">true</property>
                <property name="max-width-chars">80</property>
                <property name="justify">center</property>
                <property name="halign">center</property>
                <property name="xalign">0.5</property>
                <property name="label">
I'm a passionate Full-Stack Developer currently pursuing a degree in Computer Science with a stellar academic record. My journey in technology is driven by a desire to create innovative solutions that make a real difference. As a founder and engineer, I'm developing an AI-integrated healthcare platform that combines cutting-edge technology with practical healthcare solutions.
                </property>
              </object>
            </child>

            <!-- Info cards row -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">16</property>
                <property name="halign">center</property>

                <!-- Academic Excellence -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="halign">center</property>

                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">education-symbolic</property>
                            <property name="icon-size">large</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">9.5 GPA</property>
                            <property name="halign">center</property>
                            <style><class name="title-4"/></style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Academic Excellence</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <property name="halign">center</property>
                            <style><class name="dim-label"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- Awards -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="halign">center</property>

                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">emblem-favorite-symbolic</property>
                            <property name="icon-size">large</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">10+ Awards</property>
                            <property name="halign">center</property>
                            <style><class name="title-4"/></style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Competition Winner</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <property name="halign">center</property>
                            <style><class name="dim-label"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- Author -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">8</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="halign">center</property>

                        <child>
                          <object class="GtkImage">
                            <property name="icon-name">accessories-text-editor-symbolic</property>
                            <property name="icon-size">large</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Author</property>
                            <property name="halign">center</property>
                            <style><class name="title-4"/></style>
                          </object>
                        </child>

                        <child>
                          <object class="GtkLabel">
                            <property name="label">Published Writer</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <property name="halign">center</property>
                            <style><class name="dim-label"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>
  </template>
</interface>


