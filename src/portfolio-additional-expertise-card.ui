<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioAdditionalExpertiseCard" parent="AdwBin">
    <style>
      <class name="card"/>
      <class name="non-interactive"/>
    </style>
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">16</property>
        <property name="margin-top">20</property>
        <property name="margin-bottom">20</property>
        <property name="margin-start">20</property>
        <property name="margin-end">20</property>
        <property name="halign">center</property>

        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Additional Expertise</property>
            <property name="wrap">true</property>
            <style>
              <class name="headline"/>
            </style>
          </object>
        </child>

        <child>
          <object class="GtkBox">
            <property name="orientation">horizontal</property>
            <property name="hexpand">true</property>
            <property name="halign">center</property>
            <property name="spacing">16</property>
            <property name="margin-top">16</property>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="fullstack_title_label">
                    <property name="label" translatable="yes">Full-Stack</property>
                    <style>
                      <class name="title-3"/>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Development</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="uiux_title_label">
                    <property name="label" translatable="yes">UI/UX</property>
                    <style>
                      <class name="title-3"/>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Design</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="halign">center</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="opensource_title_label">
                    <property name="label" translatable="yes">Open-Source</property>
                    <style>
                      <class name="title-3"/>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Contributions</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
