<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="PortfolioAchievementsPage" parent="AdwBin">
    <child>
      <object class="AdwClamp">
        <property name="maximum-size">900</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">32</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>

            <child>
              <object class="GtkLabel">
                <property name="label">Achievements</property>
                <property name="css-classes">title-1</property>
                <property name="halign">center</property>
              </object>
            </child>

            <child>
              <object class="GtkLabel">
                <property name="label">
                  Milestones and recognitions earned along the journey
                </property>
                <property name="css-classes">dim-label</property>
                <property name="halign">center</property>
                <property name="wrap">true</property>
              </object>
            </child>

            <child>
              <object class="GtkLabel">
                <property name="label">Achievements</property>
                <property name="css-classes">heading</property>
                <property name="halign">start</property>
              </object>
            </child>

            <!-- CONTACT-STYLE CARD -->
            <child>
              <object class="AdwBin">
                <property name="css-classes">card</property>

                <child>
                  <object class="GtkListBox" id="rows_box">
                    <property name="selection-mode">none</property>
                    <property name="show-separators">true</property>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
