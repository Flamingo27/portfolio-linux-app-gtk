<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioEducationPage" parent="AdwBin">
    <property name="child">
      <object class="AdwClamp">
        <property name="margin-top">48</property>
        <property name="margin-bottom">48</property>
        <property name="margin-start">32</property>
        <property name="margin-end">32</property>
        <property name="halign">center</property>

        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>

            <child>
              <object class="GtkLabel">
                <property name="label">Education</property>
                <property name="justify">center</property>
                <style>
                  <class name="title-1"/>
                </style>
              </object>
            </child>

            <child>
              <object class="GtkBox" id="education_rows_container">
                <property name="orientation">vertical</property>
                <property name="spacing">16</property>
                <property name="vexpand">false</property>
              </object>
            </child>

            <!-- Summary cards -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">16</property>
                <property name="halign">center</property>
                <property name="margin-top">24</property>

                <!-- CARD 1 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">110</property>
                    <property name="height-request">120</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="spacing">4</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">9.1</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="title-2"/></style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Current GPA</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="body"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- CARD 2 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">110</property>
                    <property name="height-request">120</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="spacing">4</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">98.6%</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="title-2"/></style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">ICSE Score</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="body"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>

                <!-- CARD 3 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">110</property>
                    <property name="height-request">120</property>
                    <property name="child">
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="halign">center</property>
                        <property name="valign">center</property>
                        <property name="spacing">4</property>
                        <property name="margin-start">12</property>
                        <property name="margin-end">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">CS</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="title-2"/></style>
                          </object>
                        </child>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Specialization</property>
                            <property name="wrap">true</property>
                            <property name="justify">center</property>
                            <style><class name="body"/></style>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>

          </object>
        </property>
      </object>
    </property>
  </template>
</interface>