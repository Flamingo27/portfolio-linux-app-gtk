<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioExperiencePage" parent="AdwBin">
    <property name="child">
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>
        <property name="vscrollbar-policy">automatic</property>
        <property name="child">
          <object class="AdwClamp">
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">16</property>
            <property name="margin-end">16</property>
            <property name="maximum-size">900</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Experience</property>
                    <property name="halign">center</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkListBox" id="experience_list_box">
                    <property name="selection-mode">none</property>
                    <property name="css-classes">
                      <nth-child-even value="false"/>
                      <nth-child-odd value="false"/>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>