<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioAboutPage" parent="AdwBin">
    <property name="child">
      <object class="AdwClampScrollable">
        <property name="maximum-size">800</property>

        <property name="child">
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="vscrollbar-policy">automatic</property>

            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <property name="margin-top">48</property>
                <property name="margin-bottom">48</property>
                <property name="margin-start">32</property>
                <property name="margin-end">32</property>
                <property name="halign">center</property>

                <!-- Profile Image -->
               <!-- Profile Avatar -->
<child>
  <object class="AdwAvatar" id="profile_avatar">
    <property name="size">336</property>
    <property name="show-initials">false</property>
  </object>
</child>


                <!-- Name -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Alokparna Mitra</property>
                    <property name="justify">center</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>

                <!-- Role -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Full-Stack Developer</property>
                    <property name="justify">center</property>
                    <style>
                      <class name="title-2"/>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>

                <!-- About Text -->
                <child>
                  <object class="GtkLabel">
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <property name="xalign">0.5</property>
                    <property name="max-width-chars">70</property>
                    <property name="label">
I'm a passionate Full-Stack Developer currently pursuing B.Tech in Computer Science &amp; Engineering at the Institute of Engineering &amp; Management with a stellar 9.1 GPA. My journey in technology is driven by a desire to create innovative solutions that make a real difference.

As Co-Founder of Cura Horizon, I'm developing an AI-integrated healthcare platform that combines cutting-edge technology with practical healthcare solutions. My expertise spans from web development to blockchain, IoT, and hardware prototyping.
                    </property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>

                <!-- Cards Row -->
<!-- Cards Row -->
<child>
  <object class="GtkBox">
    <property name="orientation">horizontal</property>
    <property name="spacing">16</property>
    <property name="halign">center</property>
    <property name="margin-top">24</property>

    <!-- CARD 1 -->
    <child>
      <object class="AdwBin">
        <property name="width-request">160</property>
        <property name="height-request">160</property>
        <style><class name="card"/></style>

        <property name="child">
          <object class="GtkCenterBox">
            <property name="halign">center</property>
            <property name="valign">center</property>

            <property name="center-widget">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">applications-education-symbolic</property>
                    <property name="pixel-size">32</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">9.1 GPA</property>
                    <style><class name="title-3"/></style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Academic Excellence</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <style><class name="caption"/></style>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </child>

    <!-- CARD 2 -->
    <child>
      <object class="AdwBin">
        <property name="width-request">160</property>
        <property name="height-request">160</property>
        <style><class name="card"/></style>

        <property name="child">
          <object class="GtkCenterBox">
            <property name="halign">center</property>
            <property name="valign">center</property>

            <property name="center-widget">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">starred-symbolic</property>
                    <property name="pixel-size">32</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">3+ Awards</property>
                    <style><class name="title-3"/></style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Competition Winner</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <style><class name="caption"/></style>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </child>

    <!-- CARD 3 -->
    <child>
      <object class="AdwBin">
        <property name="width-request">160</property>
        <property name="height-request">160</property>
        <style><class name="card"/></style>

        <property name="child">
          <object class="GtkCenterBox">
            <property name="halign">center</property>
            <property name="valign">center</property>

            <property name="center-widget">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">book-open-symbolic</property>
                    <property name="pixel-size">32</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Author</property>
                    <style><class name="title-3"/></style>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel">
                    <property name="label">Published Writer</property>
                    <property name="wrap">true</property>
                    <property name="justify">center</property>
                    <style><class name="caption"/></style>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </child>

  </object>
</child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>

