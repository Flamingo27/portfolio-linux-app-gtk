<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioAboutPage" parent="AdwBin">
    <property name="child">
      <object class="AdwClamp">
        <property name="margin-top">48</property>
        <property name="margin-bottom">48</property>
        <property name="margin-start">32</property>
        <property name="margin-end">32</property>
        <property name="halign">center</property>

        <property name="child">
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>

            <!-- Avatar -->
            <child>
              <object class="AdwAvatar" id="profile_avatar">
                <property name="size">336</property>
                <property name="show-initials">false</property>
              </object>
            </child>

            <!-- Name -->
            <child>
              <object class="GtkLabel">
                <property name="label">Alokparna Mitra</property>
                <property name="justify">center</property>
                <style>
                  <class name="title-1"/>
                </style>
              </object>
            </child>

            <!-- Role -->
            <child>
              <object class="GtkLabel">
                <property name="label">Full-Stack Developer</property>
                <property name="justify">center</property>
                <style>
                  <class name="title-2"/>
                  <class name="accent"/>
                </style>
              </object>
            </child>

            <!-- About -->
            <child>
              <object class="GtkLabel">
                <property name="wrap">true</property>
                <property name="justify">center</property>
                <property name="xalign">0.5</property>
                <property name="max-width-chars">70</property>
                <style>
                  <class name="body"/>
                </style>
                <property name="label">
I'm a passionate Full-Stack Developer currently pursuing B.Tech in Computer Science &amp; Engineering at the Institute of Engineering &amp; Management with a stellar 9.1 GPA. My journey in technology is driven by a desire to create innovative solutions that make a real difference.

As Co-Founder of Cura Horizon, I'm developing an AI-integrated healthcare platform that combines cutting-edge technology with practical healthcare solutions. My expertise spans from web development to blockchain, IoT, and hardware prototyping.
                </property>
              </object>
            </child>

            <!-- Stat cards -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">16</property>
                <property name="halign">center</property>
                <property name="margin-top">24</property>

                <!-- CARD TEMPLATE -->
                <!-- CARD 1 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">200</property>

                    <property name="child">
                      <object class="AdwActionRow">
                        <property name="title">9.1 GPA</property>
                        <property name="subtitle">Academic Excellence</property>
                        <property name="activatable">false</property>

                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="icon-name">applications-education-symbolic</property>
                            <property name="pixel-size">28</property>
                          </object>
                        </child>

                        <!-- INVISIBLE SUFFIX (keeps layout consistent) -->
                        <child type="suffix">
                          <object class="GtkSwitch">
                            <property name="visible">false</property>
                          </object>
                        </child>

                      </object>
                    </property>
                  </object>
                </child>

                <!-- CARD 2 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">200</property>

                    <property name="child">
                      <object class="AdwActionRow">
                        <property name="title">3+ Awards</property>
                        <property name="subtitle">Competition Winner</property>
                        <property name="activatable">false</property>

                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="icon-name">starred-symbolic</property>
                            <property name="pixel-size">28</property>
                          </object>
                        </child>

                        <child type="suffix">
                          <object class="GtkSwitch">
                            <property name="visible">false</property>
                          </object>
                        </child>

                      </object>
                    </property>
                  </object>
                </child>

                <!-- CARD 3 -->
                <child>
                  <object class="AdwBin">
                    <style><class name="card"/></style>
                    <property name="width-request">200</property>

                    <property name="child">
                      <object class="AdwActionRow">
                        <property name="title">Author</property>
                        <property name="subtitle">Published Writer</property>
                        <property name="activatable">false</property>

                        <child type="prefix">
                          <object class="GtkImage">
                            <property name="icon-name">book-open-symbolic</property>
                            <property name="pixel-size">28</property>
                          </object>
                        </child>

                        <child type="suffix">
                          <object class="GtkSwitch">
                            <property name="visible">false</property>
                          </object>
                        </child>

                      </object>
                    </property>
                  </object>
                </child>

              </object>
            </child>

          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
