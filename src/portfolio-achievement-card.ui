<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioAchievementCard" parent="AdwBin">
    <style>
      <class name="card"/>
      <class name="non-interactive"/>
    </style>
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">16</property>
        <property name="margin-top">20</property>
        <property name="margin-bottom">20</property>
        <property name="margin-start">20</property>
        <property name="margin-end">20</property>

        <child>
          <object class="GtkBox"> <!-- Box to apply background and rounded corners to icon -->
            <property name="width-request">48</property>
            <property name="height-request">48</property>
            <property name="halign">start</property>
            <property name="valign">start</property>
            <style>
              <class name="skill-icon-background"/>
            </style>
            <child>
              <object class="GtkImage" id="icon_image">
                <property name="pixel-size">24</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="title_label">
            <property name="xalign">0</property>
            <property name="wrap">true</property>
            <style>
              <class name="headline"/>
            </style>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="event_label">
            <property name="xalign">0</property>
            <property name="wrap">true</property>
            <style>
              <class name="title-4"/>
              <class name="accent"/>
            </style>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="description_label">
            <property name="xalign">0</property>
            <property name="wrap">true</property>
            <style>
              <class name="body"/>
            </style>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
