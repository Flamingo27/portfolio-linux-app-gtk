<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="PortfolioContactPage" parent="AdwBin">
    <property name="child">
      <object class="GtkScrolledWindow">
        <property name="hscrollbar-policy">never</property>

        <property name="child">
          <object class="AdwClamp">
            <property name="maximum-size">760</property>

            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">36</property>
                <property name="margin-top">32</property>
                <property name="margin-bottom">32</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>

                <!-- ───────── HEADER ───────── -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">8</property>
                    <property name="halign">center</property>

                    <child>
                      <object class="GtkLabel">
                        <property name="label">Get In Touch</property>
                        <attributes>
                          <attribute name="weight" value="bold"/>
                          <attribute name="scale" value="2.4"/>
                        </attributes>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel">
                        <property name="label">
Let's discuss your next project or opportunity
                        </property>
                        <style>
                          <class name="caption"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- ───────── CONTACT INFO ───────── -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Contact Information</property>

                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Email</property>
                        <property name="subtitle">k.19.alokparnamitra@gmail.com</property>
                        <property name="icon-name">mail-symbolic</property>
                        <property name="activatable">true</property>
                        <signal name="activated" handler="on_open_email"/>
                      </object>
                    </child>

                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Phone</property>
                        <property name="subtitle">+91 96473 25707</property>
                        <property name="icon-name">call-symbolic</property>
                        <property name="activatable">true</property>
                        <signal name="activated" handler="on_open_phone"/>
                      </object>
                    </child>

                    <child>
                      <object class="AdwActionRow">
                        <property name="title">Location</property>
                        <property name="subtitle">Kolkata, West Bengal, India</property>
                        <property name="icon-name">location-symbolic</property>
                        <property name="activatable">true</property>
                        <signal name="activated" handler="on_open_location"/>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- ───────── CONNECT ONLINE ───────── -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Connect Online</property>

                    <child>
                      <object class="AdwActionRow">
                        <property name="title">GitHub</property>
                        <property name="subtitle">Flamingo27</property>
                        <property name="icon-name">github-symbolic</property>
                        <property name="activatable">true</property>
                        <signal name="activated" handler="on_open_github"/>
                      </object>
                    </child>

                    <child>
                      <object class="AdwActionRow">
                        <property name="title">LinkedIn</property>
                        <property name="subtitle">alokparna-mitra</property>
                        <property name="icon-name">linkedin-symbolic</property>
                        <property name="activatable">true</property>
                        <signal name="activated" handler="on_open_linkedin"/>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- ───────── SEND MESSAGE ───────── -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Send a Message</property>

                    <child>
                      <object class="AdwEntryRow" id="name_entry">
                        <property name="title">Name</property>
                        <signal name="changed" handler="on_changed"/>
                      </object>
                    </child>

                    <child>
                      <object class="AdwEntryRow" id="email_entry">
                        <property name="title">Email</property>
                        <property name="input-purpose">email</property>
                        <signal name="changed" handler="on_changed"/>
                      </object>
                    </child>

                    <child>
                      <object class="AdwExpanderRow">
                        <property name="title">Message</property>
                        <child>
                          <object class="GtkTextView" id="message_view">
                            <property name="wrap-mode">word-char</property>
                            <property name="height-request">120</property>
                            <property name="buffer">
                              <object class="GtkTextBuffer">
                                <signal name="changed" handler="on_changed"/>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- ───────── SEND BUTTON + SPINNER ───────── -->
                <child>
                  <object class="GtkBox">
                    <property name="spacing">8</property>
                    <property name="halign">center</property>

                    <child>
                      <object class="GtkSpinner" id="spinner">
                        <property name="visible">false</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkButton" id="send_button">
                        <property name="sensitive">false</property>
                        <signal name="clicked" handler="on_send_clicked"/>
                        <style>
                          <class name="suggested-action"/>
                          <class name="pill"/>
                        </style>
                        <child>
                          <object class="GtkLabel">
                            <property name="label">Send Message</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <!-- ───────── STATUS MESSAGE ───────── -->
                <child>
                  <object class="GtkRevealer" id="status_revealer">
                    <property name="reveal-child">false</property>
                    <property name="transition-type">slide-down</property>
                    <child>
                      <object class="GtkLabel" id="status_label">
                        <property name="wrap">true</property>
                        <property name="halign">center</property>
                      </object>
                    </child>
                  </object>
                </child>

              </object>
            </property>
          </object>
        </property>
      </object>
    </property>
  </template>
</interface>
