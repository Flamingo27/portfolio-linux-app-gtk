<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioProjectCard" parent="AdwBin">
    <style>
      <class name="card"/>
    </style>

    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <child>
            <object class="GtkImage" id="project_image">
                <property name="height-request">150</property>
                <property name="margin-bottom">10</property>
            </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">10</property>
            <property name="margin-top">16</property>
            <property name="margin-bottom">16</property>
            <property name="margin-start">16</property>
            <property name="margin-end">16</property>

            <!-- TITLE -->
            <child>
              <object class="GtkLabel" id="title_label">
                <property name="xalign">0</property>
                <style>
                  <class name="title-3"/>
                </style>
              </object>
            </child>

            <!-- SUBTITLE -->
            <child>
              <object class="GtkLabel" id="subtitle_label">
                <property name="xalign">0</property>
                <style>
                  <class name="accent"/>
                </style>
              </object>
            </child>

            <!-- DESCRIPTION -->
            <child>
              <object class="GtkLabel" id="description_label">
                <property name="xalign">0</property>
                <property name="wrap">true</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>

            <!-- ACHIEVEMENT -->
            <child>
              <object class="GtkBox" id="achievement_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <property name="margin-top">8</property>

                <child>
                  <object class="GtkImage">
                    <property name="icon-name">starred-symbolic</property>
                    <property name="pixel-size">16</property>
                  </object>
                </child>

                <child>
                  <object class="GtkLabel" id="achievement_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>

            <!-- TECH STACK -->
            <child>
              <object class="GtkFlowBox" id="tech_flowbox">
                <property name="row-spacing">8</property>
                <property name="column-spacing">8</property>
                <property name="margin-top">10</property>
              </object>
            </child>

            <!-- LINKS -->
            <child>
              <object class="GtkBox" id="links_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <property name="margin-top">10</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
