<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>

  <template class="PortfolioLinuxAppGtkWindow" parent="AdwApplicationWindow">
    <property name="title">Alokparna Portfolio</property>
    <property name="default-width">1000</property>
    <property name="default-height">650</property>

    <property name="content">
      <object class="AdwNavigationSplitView">

        <!-- ───────── LEFT SIDEBAR ───────── -->
        <property name="sidebar">
          <object class="AdwNavigationView">

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Home</property>
                <property name="child">
                  <object class="PortfolioHeroPage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">About</property>
                <property name="child">
                  <object class="PortfolioAboutPage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Experience</property>
                <property name="child">
                  <object class="PortfolioExperiencePage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Projects</property>
                <property name="child">
                  <object class="PortfolioProjectsPage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Skills</property>
                <property name="child">
                  <object class="PortfolioSkillsPage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Achievements</property>
                <property name="child">
                  <object class="PortfolioAchievementsPage"/>
                </property>
              </object>
            </child>

            <child>
              <object class="AdwNavigationPage">
                <property name="title">Contact</property>
                <property name="child">
                  <object class="PortfolioContactPage"/>
                </property>
              </object>
            </child>

          </object>
        </property>

        <!-- ───────── CONTENT AREA ───────── -->
        <property name="content">
          <object class="AdwNavigationView"/>
        </property>

      </object>
    </property>
  </template>
</interface>
