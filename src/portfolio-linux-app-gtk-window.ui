<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="PortfolioLinuxAppGtkWindow" parent="AdwApplicationWindow">

    <property name="title">Alokparna Mitra</property>

    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>

        <!-- Add AdwHeaderBar at the top -->
        <child>
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="GtkLabel">
                <property name="label">Alokparna Portfolio</property>
                <property name="xalign">0</property>
              </object>
            </property>
          </object>
        </child>

        <!-- Main content -->
        <child>
          <object class="AdwToolbarView">
            <property name="content">
              <object class="GtkPaned">
                <property name="orientation">horizontal</property>

                <!-- ───────── SIDEBAR ───────── -->
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="width-request">260</property>
                    <property name="hscrollbar-policy">never</property>

                    <property name="child">
                      <object class="GtkListBox" id="nav_list">
                        <property name="selection-mode">single</property>

                        <!-- Navigation Items -->
                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">user-home-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Home</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <!-- Additional navigation items -->
                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">avatar-default-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">About</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">briefcase-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Experience</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">folder-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Projects</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">tools-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Skills</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">trophy-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Achievements</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                        <child>
                          <object class="GtkListBoxRow">
                            <child>
                              <object class="GtkBox">
                                <property name="orientation">horizontal</property>
                                <property name="spacing">12</property>
                                <property name="margin-start">16</property>
                                <property name="margin-top">12</property>
                                <property name="margin-bottom">12</property>

                                <child>
                                  <object class="GtkImage">
                                    <property name="icon-name">mail-unread-symbolic</property>
                                    <property name="pixel-size">16</property>
                                  </object>
                                </child>

                                <child>
                                  <object class="GtkLabel">
                                    <property name="label">Contact</property>
                                    <property name="xalign">0</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>

                      </object>
                    </property>
                  </object>
                </child>

                <!-- ───────── CONTENT ───────── -->
                <child>
                  <object class="AdwViewStack" id="view_stack">
                    <property name="hexpand">true</property>
                    <property name="vexpand">true</property>

                    <!-- Pages -->
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioHeroPage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioAboutPage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioExperiencePage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioProjectsPage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioSkillsPage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioAchievementsPage"/></property></object></child>
                    <child><object class="AdwViewStackPage"><property name="child"><object class="PortfolioContactPage"/></property></object></child>

                  </object>
                </child>

              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
