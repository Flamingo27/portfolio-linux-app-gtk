<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="PortfolioLinuxAppGtkWindow" parent="AdwApplicationWindow">
    <property name="title">Alokparna Mitra</property>
    <property name="default-width">1100</property>
    <property name="default-height">720</property>

    <property name="content">
      <object class="GtkOverlay">

        <!-- ================= MAIN NAVIGATION ================= -->
        <child>
          <object class="AdwNavigationView" id="nav_view">

            <!-- HERO PAGE -->
            <child>
              <object class="AdwNavigationPage" id="hero_page">
                <property name="title">Home</property>
                <property name="can-pop">false</property>
                <property name="child">
                  <object class="PortfolioHeroPage"/>
                </property>
              </object>
            </child>

            <!-- MAIN PAGE -->
            <child>
              <object class="AdwNavigationPage" id="main_page">
                <property name="title">Portfolio</property>
                <property name="child">
                  <object class="AdwNavigationSplitView">

                    <!-- ========== SIDEBAR ========== -->
                    <property name="sidebar">
                      <object class="AdwNavigationPage">
                        <property name="title">Menu</property>
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="hscrollbar-policy">never</property>

                            <property name="child">
                              <object class="GtkListBox" id="nav_list">
                                <property name="selection-mode">single</property>
                                <style>
                                  <class name="navigation-sidebar"/>
                                </style>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">About Me</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Education</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Experience</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Projects</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Skills</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Achievements &amp; Recognition</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Publications &amp; Publications</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                                <child><object class="GtkListBoxRow"><child><object class="GtkLabel"><property name="label">Contact</property><property name="xalign">0</property><property name="margin-start">16</property><property name="margin-top">12</property><property name="margin-bottom">12</property></object></child></object></child>

                              </object>
                            </property>
                          </object>
                        </property>
                      </object>
                    </property>

                    <!-- ========== CONTENT ========== -->
                    <property name="content">
                      <object class="AdwNavigationPage">
                        <property name="title"></property>
                        <property name="child">
                          <object class="AdwViewStack" id="view_stack">
                            <child><object class="PortfolioAboutPage"/></child>
                            <child><object class="PortfolioEducationPage"/></child>
                            <child><object class="PortfolioExperiencePage"/></child>
                            <child><object class="PortfolioProjectsPage"/></child>
                            <child><object class="PortfolioSkillsPage"/></child>
                            <child><object class="PortfolioAchievementsPage"/></child>
                            <child><object class="PortfolioPublicationPage"/></child>
                            <child><object class="PortfolioContactPage"/></child>
                          </object>
                        </property>
                      </object>
                    </property>

                  </object>
                </property>
              </object>
            </child>

          </object>
        </child>

        <!-- ================= FLOATING CLOSE BUTTON ================= -->
        <child type="overlay">
          <object class="GtkButton">
            <property name="icon-name">window-close-symbolic</property>
            <property name="action-name">window.close</property>

            <property name="halign">end</property>
            <property name="valign">start</property>
            <property name="margin-top">12</property>
            <property name="margin-end">12</property>

            <style>
              <class name="circular"/>
              <class name="flat"/>
            </style>
          </object>
        </child>

      </object>
    </property>
  </template>
</interface>