<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>

  <template class="PortfolioLinuxAppGtkWindow" parent="AdwApplicationWindow">
    <property name="title">Alokparna Mitra</property>
    <property name="default-width">1100</property>
    <property name="default-height">720</property>

    <property name="content">
      <object class="AdwNavigationView" id="nav_view">

        <!-- HERO PAGE (NO SIDEBAR) -->
        <child>
          <object class="AdwNavigationPage" id="hero_page">
            <property name="child">
              <object class="PortfolioHeroPage"/>
            </property>
          </object>
        </child>

        <!-- MAIN APP (WITH SIDEBAR) -->
        <child>
          <object class="AdwNavigationPage" id="main_page">
            <property name="child">
              <object class="AdwOverlaySplitView">

                <!-- SIDEBAR -->
                <property name="sidebar">
                  <object class="GtkScrolledWindow">
                    <property name="width-request">260</property>
                    <property name="hscrollbar-policy">never</property>
                    <property name="child">
                      <object class="GtkListBox" id="nav_list">
                        <property name="selection-mode">single</property>

                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">About</property></object></property></object></child>
                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">Experience</property></object></property></object></child>
                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">Projects</property></object></property></object></child>
                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">Skills</property></object></property></object></child>
                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">Achievements</property></object></property></object></child>
                        <child><object class="GtkListBoxRow"><property name="child"><object class="GtkLabel"><property name="label">Contact</property></object></property></object></child>

                      </object>
                    </property>
                  </object>
                </property>

                <!-- CONTENT -->
                <property name="content">
                  <object class="AdwViewStack" id="view_stack">
                    <child><object class="PortfolioAboutPage"/></child>
                    <child><object class="PortfolioExperiencePage"/></child>
                    <child><object class="PortfolioProjectsPage"/></child>
                    <child><object class="PortfolioSkillsPage"/></child>
                    <child><object class="PortfolioAchievementsPage"/></child>
                    <child><object class="PortfolioContactPage"/></child>
                  </object>
                </property>

              </object>
            </property>
          </object>
        </child>

      </object>
    </property>
  </template>
</interface>
